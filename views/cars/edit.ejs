<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Edit Car</h1>
        <div class="col-4 offset-4">
            <form action="/cars/<%=car._id%>?_method=PUT" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="car[title]" value="<%=car.title %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="license_plate">License Plate</label>
                    <input class="form-control" type="text" id="license_plate" name="car[license_plate]"
                        value="<%=car.license_plate %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="license_plate">Owner</label>
                    <input class="form-control" type="text" id="owner" name="car[owner]" value="<%=car.owner %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="car[location]"
                        value="<%=car.location %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="car[image]" value="<%=car.image %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="car[price]" value="<%=car.price %>">
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description"
                        name="car[description]"><%= car.description%></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-lg">Update</button>
                </div>
            </form>
            <a href="/cars/<%= car._id%>">Back To Car</a>

        </div>
    </div>