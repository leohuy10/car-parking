<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">New Car</h1>
        <div class="col-4 offset-4">
            <form action="/cars" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="car[title] " required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="license_plate">License Plate</label>
                    <input class="form-control" type="text" id="license_plate" name="car[license_plate] " required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="license_plate">Owner</label>
                    <input class="form-control" type="text" id="Owner" name="car[Owner] " required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="car[location]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="car[image]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Fare</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="car[price]" required>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="car[description]"></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn  btn-lg">Add Car</button>
                </div>
            </form>
            <a href="/cars">All Cars</a>
        </div>
    </div>

    <script>(function () {
            'use strict'

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            const forms = document.querySelectorAll('.validated-form')

            // Loop over them and prevent submission
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()</script>